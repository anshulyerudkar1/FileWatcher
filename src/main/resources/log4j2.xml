<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        
        <!-- Add a FileAppender for logging to a file -->
        <File name="MyFile" fileName="D:/0000 Interview prep/Project/FileWatcher/logs/mylog.log" append="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>